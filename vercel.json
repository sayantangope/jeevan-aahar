{
  "version": 2,
  "builds": [
    {
      "src": "jeevan-aahar-client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "jeevan-aahar-server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "jeevan-aahar-server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/jeevan-aahar-client/$1"
    }
  ],
  "env": {
    "MONGODB_URI": "@MONGO_URI",
    "PORT": "3000"
  }
}

